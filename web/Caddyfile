:80 {
	encode gzip

	handle {
		root * /dist
		file_server
		route {
			try_files {path} /
			header / Cache-Control "no-cache,no-store,max-age=0,must-revalidate"
		}
		header /assets/* Cache-Control "public, max-age=7776000"
		header /*.png Cache-Control "public, max-age=7776000"
		header /*.svg Cache-Control "public, max-age=7776000"
		header /*.webp Cache-Control "public, max-age=7776000"
	}

	@filename {
		query filename=*
	}

	handle /api/runtime-config {
		root * /root/.config/auto-novel
		rewrite * /config.json
		file_server
	}

	handle_path /panel-content* {
		root * /root/.config/auto-novel
		file_server
	}
}
